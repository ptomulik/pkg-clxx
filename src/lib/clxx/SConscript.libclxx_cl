Import('env')

from SCons.Util import CLVar

sources =  [
    'command_queue.cpp',
    'context.cpp',
    'context_properties.cpp',
    'device.cpp',
    'device_partition.cpp',
    'device_partition_properties.cpp',
    'devices.cpp',
    'event.cpp',
    'functions.cpp',
    'kernel.cpp',
    'kernel_exec.cpp',
    'mem.cpp',
    'mem_fcn.cpp',
    'ndrange.cpp',
    'platform.cpp',
    'platform_layer.cpp',
    'platforms.cpp',
    'program.cpp',
    'program_observer.cpp',
]

headers = [
    'command_queue.hpp',
    'command_queue_fwd.hpp',
    'context.hpp',
    'context_fwd.hpp',
    'context_properties.hpp',
    'context_property.hpp',
    'device.hpp',
    'device_fwd.hpp',
    'device_partition.hpp',
    'device_partition_properties.hpp',
    'device_partition_property.hpp',
    'devices.hpp',
    'event.hpp',
    'event_fwd.hpp',
    'events.hpp',
    'clobj.hpp',
    'clobj_fcn.hpp',
    'clobj_impl.hpp',
    'functions.hpp',
    'kernel.hpp',
    'kernel_exec.hpp',
    'kernel_fwd.hpp',
    'kernels.hpp',
    'mem.hpp',
    'mem_fcn.hpp',
    'mem_fwd.hpp',
    'ndrange.hpp',
    'platform.hpp',
    'platform_fwd.hpp',
    'platform_layer.hpp',
    'platforms.hpp',
    'program.hpp',
    'program_binaries.hpp',
    'program_binary.hpp',
    'program_fwd.hpp',
    'program_observer.hpp',
    'program_source.hpp',
    'program_sources.hpp',
]

headers += [
    'cl.hpp'
]

env['CLXX_PACKAGES']['libclxx_cl'] = {
    'version' : env.subst('$CLXX_VERSION'),
    'libdeps' : CLVar('OpenCL clxx_info')
}

objects = env.SharedObject(sources)

overrides = {
    'SHLIBVERSION'  : env['CLXX_PACKAGES']['libclxx_cl']['version'],
    'LIBS'          : env['CLXX_PACKAGES']['libclxx_cl']['libdeps']
}

# rlib - "real" libarary
rlib = env.SharedLibrary('../clxx_cl', objects + ['cl/real.cpp'], **overrides)

# tlib - library for testing (OpenCL functions replaced with mocks)
tlib = env.SharedLibrary('../clxx_cl_test', objects + ['cl/mock.cpp'], **overrides)
env.Ignore('../..', tlib)

ilib = env.InstallVersionedLib('${libdir}', rlib, **overrides)
env.Ignore("${INSTALL_SANDBOX}${libdir}", ilib)

iheaders = env.Install("${includedir}/clxx", headers)
env.Ignore("${INSTALL_SANDBOX}${includedir}/clxx", iheaders)

env.Alias('install-libclxx_cl-headers', iheaders)
env.Alias('install-libclxx_cl-lib', ilib)
env.Alias('install-libclxx_cl-dev', ['install-libclxx_cl-headers', 'install-libclxx_cl-lib' ])
env.Alias('install','install-libclxx_cl-dev')

